{% extends 'base.html.twig' %}

{% block title %}Hello AdminCommentController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Article {{ post.title }}</h1>
    <h3>Liste des commentaires</h3>
    {% for comment in post.comments %}
    <div id="{{ comment.id }}" style="border:1px solid gray" class="p-2 mb-2">
        <li style="padding:2rem; list-style:none">{{comment.content}}</li>
        <li style="padding:2rem; list-style:none">Statut  : 
            {% if comment.published == true %} 
            <span id="status-{{ comment.id }}" class="text-success">En ligne</span>
            {% else %}
            <span id="status-{{ comment.id }}" class="text-danger">Hors ligne</span>
            {%endif %}
        </li>
        <li style="padding:2rem; list-style:none"><button data-comment-id="{{ comment.id }}" class="btnPubly btn btn-success p-2 ">Publier</button> <button data-comment-id="{{ comment.id }}" class="btnCancel btn btn-danger p-2">Effacer</button></li>
    </div>
    
    {% endfor %}

   
</div>
{% endblock %}
{% block javascripts %}
{{ parent() }}
<script src="{{ asset('js/admin/moderate_comment.js') }}"></script>
{% endblock%}
