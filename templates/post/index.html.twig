{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}
{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="{{ asset('css/post.css') }}">
{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
   
    
    <div class='article'>
        <div><img src="{{ post.image }} " alt="image-article"></div>
        <div class='article-info'> 
            <ul>
         <li>{{ post.title | upper }} </li>
         <h6><span class="badge badge-secondary">{{ post.category.name }}</span></h6>
         <li class="article-info-content">Extrait: {{ post.content }}... </li>
         <li class="article-info-author">Auteur : {{ post.author }} </li>
         <li class="article-info-date">Date de cr√©ation : {{ post.createdAt | date("m/d/Y") }} </li>
         <li><a class="btn btn-primary" href="">Lire la suite</a></li>
         
         </ul>
         </div>
     </div>
    
   
</div>
{% endblock %}
